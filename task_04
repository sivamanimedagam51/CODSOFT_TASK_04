import random

user_score = 0
computer_score = 0

print("=== ROCK âœŠ  PAPER âœ‹  SCISSORS âœŒ  GAME ===")

while True:
    print("\nChoose one:")
    print("1. Rock")
    print("2. Paper")
    print("3. Scissors")

    user_input = input("Enter your choice (1/2/3 or rock/paper/scissors): ").lower()

    # Convert numbers to words
    if user_input == "1":
        user_choice = "rock"
    elif user_input == "2":
        user_choice = "paper"
    elif user_input == "3":
        user_choice = "scissors"
    elif user_input in ["rock", "paper", "scissors"]:
        user_choice = user_input
    else:
        print("âŒ Invalid choice! Please try again.")
        continue

    computer_choice = random.choice(["rock", "paper", "scissors"])

    print(f"\nYou chose      : {user_choice}")
    print(f"Computer chose : {computer_choice}")

    if user_choice == computer_choice:
        print("\nğŸ¤ It's a TIE!")
    elif (user_choice == "rock" and computer_choice == "scissors") or \
         (user_choice == "paper" and computer_choice == "rock") or \
         (user_choice == "scissors" and computer_choice == "paper"):
        print("\nğŸ‰ You WIN!")
        user_score += 1
    else:
        print("\nğŸ¤– Computer WINS!")
        computer_score += 1

    print(f"\nğŸ“Š Score â€” You: {user_score} | Computer: {computer_score}")

    play_again = input("\nDo you want to play again? (yes/no): ").lower()
    if play_again != "yes":
        print("\nThanks for playing! ğŸ‘‹ğŸ˜Š")
        break
